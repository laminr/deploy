{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
    {{ form_widget(form) }}
    <div class="row">
        <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-info col-sm-8"/>
        <a href="{{ path('homepage') }}" class="btn btn-default col-sm-4">{% trans %}login.home{% endtrans %}</a>
    </div>
</form>